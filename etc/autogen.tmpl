srcdir="__YM__SRC__DIRECTORY__"

# common config file
commonconf="__YM__AUTOGEN_COMMON__"

# local config file
localconf="./autogen.local"

# default values
export CC=gcc
export CFLAGS=
export CXX=g++
export CXXFLAGS
export CPP=cpp
export CPPFLAGS=
optflags=""

if test -r $commonconf; then
  . $commonconf
fi

if test -r $localconf; then
  . $localconf
fi

$srcdir/configure $optflags
